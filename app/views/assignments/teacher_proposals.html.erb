<div class="container">
  <div class="titre">
    <h1>Sélection des instituteurs</h1>
    <h3> Pour l'établissement : <strong> <%= "#{@school.name}" %> </strong> </h3>
  </div>
  <div class="d-flex">
    <% @match_teachers_around.each do |teacher| %>
    <div class="cartes">
      <div class="row align-items">
        <div class="col">
          <div class="image">
            <% if teacher.photo.attached? %>
              <%= cl_image_tag teacher.photo.key, height: 200, width: 200, crop: :fill %>
            <% end %>
          </div>
        </div>
        <div class="col">
          <div class="contenus">
              <%= "#{teacher.first_name} #{teacher.last_name}" %>
            <%# <div class="bio"> %>
              <%# <strong>Disponibilité:</strong><%= " #{teacher.availability}" %>
            <%# </div> %>
          </div>
        </div>
      </div>
      <div class="competence">
        <strong>Niveau souhaité:</strong> <%= "#{teacher.level}" %>
      </div>
      <div class="experience">
        <% if teacher.specification? %>
            <strong>Catégorie souhaitée:</strong> <%= "#{teacher.specification}" %>
        <% end %>
      </div>
      <div class="boutons">
          <%= link_to "Envoyez un email", affect_assignment_path(@assignment, user_id: teacher.id), method: :post %>
      </div>
    </div>
    <% end %>
  </div>
</div>
