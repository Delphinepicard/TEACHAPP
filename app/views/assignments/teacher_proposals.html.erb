<head>
  <style>
.mail-container {
  background-color: #FFF9F0;
  margin: 0 auto;
  height: 300px;
  width: 600px;
  padding: 10px;
  border-radius: 4px;
  margin-bottom: 10px;
  box-shadow: 0px 1px 5px 1px rgba(0,0,0,0.51);
}

.mail-name {
  margin-bottom: 20px;
  margin-top: 20px;
}

.image-mail {
  text-align: center;
}

.button-container {
  width: 25%;
  margin: 0 auto;
  margin-top: 100px;
}

.button-mail {
  padding: 8px;
  background-color: #0965DB;
  text-align: center;
  border-radius: 4px;
}

.button-mail p {
  margin-top: auto;
  margin-bottom: auto;
}

.button-mail a {
  color: white;
  text-decoration: none;
}

.button-mail:hover {
  background-color: #064799;
}
  </style>
</head>

<div class="container">
  <div class="titre">
    <h1>Sélection des instituteurs</h1>
    <h3> Pour l'établissement : <strong> <%= "#{@school.name}" %> </strong> </h3>
  </div>
  <div class="d-flex">
    <% @match_teachers_around.each do |teacher| %>
    <div class="cartes">
      <div class="row align-items">
        <div class="col">
          <div class="image">
            <% if teacher.photo.attached? %>
              <%= cl_image_tag teacher.photo.key, height: 200, width: 200, crop: :fill %>
            <% end %>
          </div>
        </div>
        <div class="col">
          <div class="contenus">
              <%= "#{teacher.first_name} #{teacher.last_name}" %>
            <%# <div class="bio"> %>
              <%# <strong>Disponibilité:</strong><%= " #{teacher.availability}" %>
            <%# </div> %>
          </div>
        </div>
      </div>
      <div class="competence">
        <strong>Niveau souhaité:</strong> <%= "#{teacher.level}" %>
      </div>
      <div class="experience">
        <% if teacher.specification? %>
            <strong>Catégorie souhaitée:</strong> <%= "#{teacher.specification}" %>
        <% end %>
      </div>
      <div class="boutons">
          <%= link_to "Envoyez un email", affect_assignment_path(@assignment, user_id: teacher.id), method: :post %>
      </div>
    </div>
    <% end %>
  </div>
</div>
