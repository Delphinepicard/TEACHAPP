  <div class="container titre_teacher_proposal">
    <h1>Sélection de l'instituteur remplaçant</h1>
  </div>

<div class="container">
  <div class="assignment_card_proposals">
    <div class="header_card">
      <div class="text_card">
        <p class="titre_card"><%= @assignment.school.name %></p>
        <p class="date_card"><%= "Du #{l @assignment.start_date} au #{l @assignment.end_date}" %> (<%= pluralize((@assignment.end_date - @assignment.start_date).to_i, 'jour') %>)</p>
      </div>
      <div class="badges_card">
        <span class="badge rounded-pill bg-light text-dark"><%= @assignment.classroom.level %></span>
        <span class="badge rounded-pill bg-info text-dark"><% if @assignment.school.specification? %>
          <%= @assignment.school.specification %>
        <% end %></span>
      </div>
    </div>
    <div class="content_card">
      <%= image_tag "icon_map.svg", height: 30 %>
      <p><%= @assignment.school.address %></p>
    </div>
  </div>

  <div class="d-flex">
    <% @match_teachers_around.each do |teacher| %>
    <div class="cartes">
      <div class="row align-items">
        <div class="col">
          <div class="image">
            <% if teacher.photo.attached? %>
              <%= cl_image_tag teacher.photo.key, height: 200, width: 200, crop: :fill %>
            <% end %>
          </div>
        </div>
        <div class="col">
          <div class="contenus">
              <%= "#{teacher.first_name} #{teacher.last_name}" %>
              <div class="badges_card">
                <span class="badge rounded-pill bg-light text-dark"><%= @assignment.classroom.level %></span>
                <span class="badge rounded-pill bg-info text-dark"><% if @assignment.school.specification? %>
                  <%= @assignment.school.specification %>
                <% end %></span>
              </div>
          </div>
        </div>
      </div>

      

      <%# <div class="competence">
        <strong>Niveau souhaité:</strong> <%= "#{teacher.level}" %>
      <%# </div> %>
      <%# <div class="experience">
        <% if teacher.specification? %>
            <%# <strong>Catégorie souhaitée:</strong> <%= "#{teacher.specification}" %>
        <%# <% end %>
      <%# </div> %>
      <div class="boutons">
          <%= link_to "Assigner", affect_assignment_path(@assignment, user_id: teacher.id), method: :post %>
      </div>
    </div>
    <% end %>
  </div>
</div>
